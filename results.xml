<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/resultsIV"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/resultTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/s1TV"
        app:layout_constraintEnd_toEndOf="@+id/s1TV"
        app:layout_constraintStart_toEndOf="@+id/s1TV"
        app:layout_constraintTop_toBottomOf="@+id/resultsIV" />

    <TextView
        android:id="@+id/s1TV"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn"
        app:layout_constraintEnd_toStartOf="@+id/s2TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTV" />

    <TextView
        android:id="@+id/s2TV"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/s1TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s1TV" />

    <Button
        android:id="@+id/resultToMenuBtn"
        android:layout_width="129dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        android:text="Menu Screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextBtn" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:text="Next Result"
        app:layout_constraintBottom_toTopOf="@+id/resultToMenuBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/previousBtn"
        app:layout_constraintTop_toBottomOf="@+id/s1TV" />

    <Button
        android:id="@+id/previousBtn"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:text="Previous Result"
        app:layout_constraintBaseline_toBaselineOf="@+id/nextBtn"
        app:layout_constraintEnd_toStartOf="@+id/nextBtn"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>