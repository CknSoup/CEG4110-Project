<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Browse From Gallery"
        app:layout_constraintBottom_toTopOf="@+id/saveLocalGalleryImageBtn"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGallery"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGallery" />

    <Button
        android:id="@+id/galToHomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Menu Screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/saveLocalGalleryImageBtn"
        app:layout_constraintTop_toBottomOf="@+id/saveLocalGalleryImageBtn" />

    <ImageView
        android:id="@+id/imageViewGallery"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

    <Button
        android:id="@+id/saveLocalGalleryImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Add for Submission"
        app:layout_constraintBottom_toTopOf="@+id/galToHomeBtn"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</android.support.constraint.ConstraintLayout>